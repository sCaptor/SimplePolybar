[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = %{F#ec6c64}%mountpoint%%{F-} %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.disabled}

[module/pulseaudio]
